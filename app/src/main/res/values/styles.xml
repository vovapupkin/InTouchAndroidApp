<resources>

    <style name="InTouchLight" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/it_light_blue</item>
        <item name="colorPrimaryDark">@color/it_dark_gray</item>
        <item name="colorAccent">@color/it_light_blue</item>
        <item name="android:statusBarColor">@color/it_blue</item>
        <item name="android:colorBackground">@color/it_light_gray</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="InTouch.AppBarOverlay" parent="InTouchLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="InTouch.PopupOverlay" parent="InTouchLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/it_light_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="InTouchLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="InTouchLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
