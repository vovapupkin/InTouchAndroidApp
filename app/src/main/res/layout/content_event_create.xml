<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.EventCreateActivity"
    tools:showIn="@layout/activity_event_create">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/event_item_image_height"
            android:src="@drawable/ic_party_mode_200dp"
            android:background="@color/it_gray"/>

    <ImageView
        android:id="@+id/img_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_item_image_height"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_item_image_height"
        android:src="@drawable/toolbar_background"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_photo_button"
            android:layout_marginTop="-30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/floating_button_margin"
            android:layout_below="@id/img_toolbar"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_photo_camera_24dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/img_toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_account_balance_32dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:singleLine="true"
                android:maxLength="50"
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/it_blue"
                android:textSize="16sp"
                android:hint="Event name"
                android:layout_toRightOf="@id/name_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/description_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_subject_32dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:maxLength="500"
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/it_blue"
                android:textSize="16sp"
                android:hint="Description"
                android:layout_toRightOf="@id/description_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/city_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_business_32dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:singleLine="true"
                android:maxLength="50"
                android:id="@+id/event_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/it_blue"
                android:textSize="16sp"
                android:hint="City"
                android:layout_toRightOf="@id/city_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_place_32dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:singleLine="true"
                android:maxLength="50"
                android:id="@+id/event_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/it_blue"
                android:textSize="16sp"
                android:hint="Address"
                android:layout_toRightOf="@id/address_icon"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/type_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_satellite_blue_24dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:singleLine="true"
                android:maxLength="50"
                android:id="@+id/event_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/it_blue"
                android:textSize="16sp"
                android:hint="Type"
                android:layout_toRightOf="@id/type_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/date_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_event_note_32dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:singleLine="true"
                android:maxLength="50"
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/it_blue"
                android:textSize="16sp"
                android:hint="Date"
                android:layout_toRightOf="@id/date_icon"/>

        </RelativeLayout>

    </LinearLayout>

    </RelativeLayout>

</ScrollView>
